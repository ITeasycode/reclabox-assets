function rb_init_addthis(text) {
  <% if ::Rails.env == 'preview' %>
  if (typeof(addthis) != 'undefined' && typeof(addthis.bar) != 'undefined') {
    addthis.bar.initialize({
      'default': {'backgroundColor': '#606060', 'buttonColor': '#900', 'textColor': '#FFF', 'buttonTextColor': '#FFF', 'hideAfter': 10},
      rules:
        [
          {'name': 'Facebook', 'match': {'referringService': 'facebook'}, 'message': 'Link auf Facebook posten:',
            'action': {'type': 'button', 'text': text, 'verb': 'share', 'service': 'facebook'}},
          {'name': 'Google', 'match': {'referrer': 'google.com'}, 'message': 'Beschwerde mit Freunden bei Google+ teilen:',
            'action': {'type': 'button', 'text': '+1', 'verb': 'share', 'service': 'google_plusone_share'}},
          {'name': 'AnyOther', 'match': {}, 'message': 'Link in sozialen Netzwerken empfehlen:',
            'action': {'type': 'button', 'text': text, 'verb': 'share', 'service': 'preferred'}},
          {'name': 'werkenntwen', 'match': {'referringService': 'werkenntwen'}, 'message': 'Empfehlen bei wer-kennt-wen:',
            'action': {'type': 'button', 'text': text, 'verb': 'share', 'service': 'werkenntwen'}},
          {'name': 'xing', 'match': {'referringService': 'xing'}, 'message': 'Share bei XING:',
            'action': {'type': 'button','text': text, 'verb': 'share', 'service': 'xing'}}
        ]
    });
  }
  <% end %>
}
