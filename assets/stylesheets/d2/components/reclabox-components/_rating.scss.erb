.rating {
  color: #607d8b;
  direction: rtl;
  max-width: 350px;
  margin: 5px auto;
  display: block;
  min-height: 90px;

  a {
    float: right;
    display: inline-block;
    padding: 0 5px;
    text-decoration: none;
    transition: color .4s;

    [class^="rbi-star"]:not(.rbi-star-outline) {
      display: none;
    }
    [class^="rbi-star"] {
      font-size: 60px !important;
    }

    &:hover,
    &:hover ~ a,
    &:focus,
    &:focus ~ a {
      cursor: pointer;
      text-shadow: 0px 1px 4px rgba(0, 0, 0, 0.19);
      [class^="rbi-star"]:not(.rbi-star-outline) {
        display: block;
      }
      .rbi-star-outline {
        display: none;
      }
      &:nth-child(5) {
        color: #ffebee;
      }
      &:nth-child(4) {
        color: #f8bbd0;
      }
      &:nth-child(3) {
        color: #f48fb1;
      }
      &:nth-child(2) {
        color: #f06292;
      }
      &:nth-child(1) {
        color: #ec407a;
      }
    }

    &:hover {
      text-shadow: 0px 0px 9px #cdd0d2, 0px 0px 9px #cdd0d2, 0px 0px 9px #cdd0d2, 0px 0px 9px #cdd0d2, 0px 0px 9px #cdd0d2;
      transition: .4s;
    }

    &.star-scale {
      [class^="rbi-star"]:not(.rbi-star-outline) {
        animation: star-scale 0.2s 1 ease-in-out;
      }
    }
  }

  &-result {
    display: inline-block;
    width: 100%;
  }

  &-current {
    float: left;
    width: 24%;
    padding-top: 27px;
    margin-right: 1%;
    text-align: center;
  }

  &-num {
    color: #ff4081;
    font-family: Roboto;
    font-size: 36px;
    font-weight: 400;
    line-height: 21px;
    text-transform: uppercase;
  }

  &-stars {
    font-size: 20px;
    color: #607d8b;
    margin-bottom: .5em;
  }
}

