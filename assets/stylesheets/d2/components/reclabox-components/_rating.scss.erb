.histo {
  float: left;
  width: 75%;

  &-star {
    float: left;
    padding: 0;
    color: $text-black-theme;
    font-family: Roboto;
    font-size: 12px;
    font-weight: 400;
    line-height: 19px;
    text-align: right;
    width: 35%;
  }
  &-rate {
    width: 100%;
    display: block;
    clear: both;
  }
}

.bar {
  color: #546e7a;
  padding: 5px 0 4px 8px;
  display: block;
  font-size: 8px;
  font-weight: 500;

  &-block {
    margin-left: 5px;
    color: black;
    display: block;
    float: right;
    width: 63%;
    position: relative;
    text-align: left;
  }
}

#bar-five {
  width: 100%;
  background-color: #ec407a;
}

#bar-four {
  width: 55%;
  background-color: #f06292;
}

#bar-three {
  width: 75%;
  background-color: #f48fb1;
}

#bar-two {
  width: 30%;
  background-color: #f8bbd0;
}

#bar-one {
  width: 40%;
  background-color: #fce4ec;
}

.rating-stars .active {
  color: #737373;
}

@keyframes star-scale {
  10% {
    transform: scale(1.1);
    opacity: 0.9;
  }

  50% {
    transform: scale(1.5);
    opacity: 0.5;
  }

  to {
    transform: scale(2);
    opacity: 0;
  }
}